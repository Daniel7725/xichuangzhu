{% macro render_works(works) %}

{% for work in works %}
<div class="work-item">
   <div class="work-header">
      <a class="work-title" href="{{ url_for('work', work_id = work.WorkID) }}">{{ work.Title }}</a><sup class="work-author">〔<a href="{{ url_for('author', author_abbr=work.AuthorAbbr) }}">{{ work.Author }}</a>〕</sup>
   </div>
   
   <div class="work-content">{{ work.Content|truncate(38, True) }}</div>
</div>
{% endfor %}

{% endmacro %}