{% macro render_authors(authors) %}

{% for author in authors %}
<div class='author-item'>
   <div>
      <a class='author' href="{{ url_for('author', author_abbr=author.Abbr, q=author.QuoteID) }}">{{ author.Author }}</a><sup class='author-dynasty'>〔<a href="{{ url_for('dynasty', dynasty_abbr=author.DynastyAbbr) }}">{{ author.Dynasty }}</a>〕</sup>
   </div>
   <div class='author-quote'>{{ author.Quote }}</div>
</div>
{% endfor %}

{% endmacro %}